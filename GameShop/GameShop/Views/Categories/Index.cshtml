@model IEnumerable<GameShop.Models.Category>

@{
    ViewBag.Title = "Категории";
}

<h2>Категории</h2>
    <p>
        @Html.ActionLink("Создать категорию", "Create")
    </p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
                <span>@Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |</span>
                <span>@Html.ActionLink("Удалить", "Delete", new { id = item.Id })</span>
        </td>
    </tr>
}

</table>
