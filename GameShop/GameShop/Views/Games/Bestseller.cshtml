@model GameShop.Models.Game

<h2>@ViewBag.Message</h2>

@{
    int rating = Model.Rating * 10;

<h4 class="s-title">БЕСТСЕЛЛЕР <span class="s-title-br"></span></h4>
<div class="s-products-item clearfix">
    <div class="s-products-img">
        <a href="/Games/Details/@Model.Id"><img src="@Model.GamePosterUrl" alt="" /></a>
    </div>
    <div class="s-products-info">
        <h6><a href="/Games/Details/@Model.Id">@Model.Name</a></h6>
        <div class="rate">
            <div style="width: @rating%;"></div>
        </div>
        <span class="commetns"><i class="ic-comment"></i> отзывы (@Model.GameComments.Count шт.)</span>
    </div>
</div>
}