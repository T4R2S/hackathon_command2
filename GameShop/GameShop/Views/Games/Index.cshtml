@model IEnumerable<GameShop.Models.Game>

@{
    ViewBag.Title = "Список игр";
}

<style>
    
.descript{ 
    width: 200px;
    overflow: hidden;
    text-overflow: ellipsis;
}

</style>

<script>
    function priceValue(){
        var price = document.getElementById("price").innerHTML = document.getElementById("price-filter").value;
    }
</script>

<h2>Список игр</h2>

<form method="get" action="/Games/Index">
    <div class="row">
        <div class="col-md-3">
            <input type="text" class="form-control" name="search" />
        </div>
        <div class="col-md-1">
            <input type="submit" class="btn btn-default" value="Найти" />
        </div>
        <div class="col-md-3">
            <input type="range" min="0" max="100000" oninput="priceValue()" id="price-filter" name="searchPrice" /> 
            <p id="price">0</p>
        </div>
    </div>
    <div>
    </div>
</form>

@if (User.Identity.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            <b>Категории</b>
        </th>
        <th>
            <b>Название</b>
        </th>
        <th>
            <b>Рейтинг</b>
        </th>
        <th>
            <b>Цена</b>
        </th>
        <th>
            <b>Описание</b>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.ActionLink(item.Name, "Details", new { id = item.Id })
        </td>
        <td>
            @for (var i = 0; i < item.Rating ;i++)
            {
                @Html.Raw("&#9733");
            }@for (var i = item.Rating; i < 10; i++)
            {
                @Html.Raw("&#9734");
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Description, new { @class = "p" })*@
            <div class="descript">@Html.DisplayFor(modelItem => item.Description)</div>
        </td>
        <td>
            @if (User.IsInRole("admin")) { 
                <span>@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |</span>
                <span>@Html.ActionLink("Delete", "Delete", new { id = item.Id }) |</span>
            }
            
            @Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
            @Html.ActionLink("Добавить в корзину", "AddToCart", new { id = item.Id})
        </td>
    </tr>
}

</table>
