@model IEnumerable<GameShop.Models.NewsFeed>

@{
    ViewBag.Title = "Список лент новостей";
}

<p>
    <h3>@Html.ActionLink("Создать новую ленту новостей", "Create")</h3>
</p>
<br>

<table class="table">
    <tr>
        <th>
            <label class="control-label col-md-2" for="Name">Id ленты новостей</label>
        </th>
        <th>
            <label class="control-label col-md-2" for="Name">Название ленты новостей</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
