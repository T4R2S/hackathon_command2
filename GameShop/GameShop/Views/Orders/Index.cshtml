@model IEnumerable<GameShop.Models.Order>

@{
    ViewBag.Title = "Корзины покупателей";
}

<h2>Корзины покупателей</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Current)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (item.Current)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Current)
        </td>
        <td>
            @Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
        </td>
    </tr>
    }
}

</table>
